// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model Admin {
    id       Int     @id @default(autoincrement())
    email    String  @unique
    password String
}

enum PostType {
    PrayerRequest
    PraiseReport
}

model Post {
    id                  Int      @id @default(autoincrement())
    text                String
    postType            PostType
    createdAt           DateTime @default(now())
}
